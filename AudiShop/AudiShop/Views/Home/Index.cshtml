@model AudiShop.ViewModels.HomeViewModel
@using AudiShop.Helpers
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="CategoriesContent">
    <div>
        <span><a href="#">MODELE</a></span>
        <span><a href="#">NADWOZIA</a></span>
    </div>
    <div class="VerticalContent">
        @foreach (var item in Model.Models)
        {   <label>
                <a href=@Url.Action("List","Models", new { models = item})>
                    <img src=@Url.PathOfModel(item.ToString())>
                    <label>@item</label>
                </a>
            </label>
        }
    </div>
</div>

